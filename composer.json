{
    "name": "jitesoft/router",
    "description": "Simple wrapper around the fast route package.",
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes",
            "email": "johannes@jitesoft.com",
            "role": "Developer",
            "homepage": "https://jite.eu"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jitesoft\\Router\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jitesoft\\Router\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit tests/",
            "phpcs -p --report=summary --standard=style.xml src"
        ]
    },
    "require": {
        "php": ">=7.1",
        "jitesoft/exceptions": "2.2.*",
        "jitesoft/container": "4.0.*",
        "zendframework/zend-diactoros": "1.7.*",
        "nikic/fast-route": "1.3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "7.0.*",
        "squizlabs/php_codesniffer": "3.2.*"
    }
}
